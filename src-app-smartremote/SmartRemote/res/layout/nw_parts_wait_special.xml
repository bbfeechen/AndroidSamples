<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/nw_parts_wait_special_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        style="@style/RESID_FONTSIZE_BIG_L_EDGE_OFF"
        android:textColor="@color/RESID_FONTSTYLE_SMARTPHONE_CONNECTION_INFORMATION_NAME"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/nw_parts_wait_special_colon_txt"
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/nw_parts_wait_special_1_txt"
        style="@style/RESID_FONTSIZE_BIG_L_EDGE_OFF"
        android:textColor="@color/RESID_FONTSTYLE_SMARTPHONE_CONNECTION_INFORMATION_NAME"
        android:gravity="left|center" />

    <TextView
        android:id="@+id/nw_parts_wait_special_2_txt"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/nw_parts_wait_special_colon_txt"
        android:layout_marginLeft="10px"
        style="@style/RESID_FONTSIZE_BIG_L_EDGE_OFF"
        android:typeface="univers"
        android:textColor="@color/RESID_FONTSTYLE_STD_NORMAL"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="left|center" />

</RelativeLayout>