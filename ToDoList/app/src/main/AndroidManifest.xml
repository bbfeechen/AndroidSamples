<?xml version="1.0" encoding="utf-8"?>
<manifest package="andrew.cmu.edu.todolist"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".DatabaseSkeletonSearchResultActivity"
                  android:label="Element Search"
                  android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <provider
            android:name=".ToDoContentProvider"
            android:authorities="andrew.cmu.edu.todolist.todocontentprovider"
            android:enabled="true"
            android:exported="true">
        </provider>
    </application>

</manifest>
